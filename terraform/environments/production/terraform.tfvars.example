# =========================
# AWS
# =========================
region = "ap-southeast-1"

# =========================
# Networking
# =========================
vpc_cidr = "10.20.0.0/16"

azs = [
  "ap-southeast-1a",
  "ap-southeast-1b",
  "ap-southeast-1c"
]

private_subnets = [
  "10.20.1.0/24",
  "10.20.2.0/24",
  "10.20.3.0/24"
]

public_subnet = "10.20.100.0/24"

# IP quản trị (VPN / SSH)
my_ip_cidr = "0.0.0.0/0" # sau có thể siết lại

# =========================
# SSH
# =========================
key_name        = "eks-prod-key"
public_key_path = "../../../key_pair/k0s_key.pub"

# =========================
# AMI (EC2-based services)
# =========================
# Ubuntu 22.04 LTS - ap-southeast-1
ami = "ami-0df7a207adb9748c7"

# =========================
# EKS
# =========================
cluster_name        = "eks-production"
kubernetes_version = "1.29"

node_instance_type = "t3.micro"
node_desired_size  = 3
node_min_size      = 2
node_max_size      = 6

# =========================
# Observability
# =========================
observability_instance_type = "t3.micro"

# =========================
# OpenVPN
# =========================
openvpn_instance_type = "t3.micro"
